<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="klipper_model.doctrine.subscriber.image_path"
                 class="Klipper\Component\Model\Doctrine\Listener\ContentPathSubscriber">
            <tag name="doctrine.event_subscriber" />
            <argument type="service" id="klipper_content.manager"/>
            <argument>Klipper\Contracts\Model\ImagePathInterface</argument>
            <argument>getImagePath</argument>
        </service>

        <service id="klipper_model.doctrine.subscriber.file_path"
                 class="Klipper\Component\Model\Doctrine\Listener\ContentPathSubscriber">
            <tag name="doctrine.event_subscriber" />
            <argument type="service" id="klipper_content.manager"/>
            <argument>Klipper\Contracts\Model\FilePathInterface</argument>
            <argument>getFilePath</argument>
        </service>
    </services>
</container>
